<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">
    <!-- 게시판글쓰기 -->
    <insert id="insertBoard" parameterType="com.javaex.vo.BoardVo">
      <![CDATA[
        insert into board (no,
                    title,
                    content,
                    hit,
                    reg_Date,
                    user_no)
        values (seq_users_no.nextval,
                #{title},
                #{content},
                 0,
                 sysdate,
                 #{user_no})
       ]]>
    </insert>
    

	<!-- 게시판글쓰기폼 (세션 회원정보 가져오기)
	<select id="selectBoardbyUser" parameterType="int" resultType="com.javaex.vo.BoardVo">
      <![CDATA[
        select  
               a.user_no,
               b.name user_name
        from board  a
        inner join users  b
        on a.user_no = b.no
        where a.user_no= #{no}	
      ]]>
	</select> -->
	

    <!-- 게시판 전체 리스트  -->
	<select id="selectAllList" parameterType="int" resultType="com.javaex.vo.BoardVo">
	<![CDATA[
        select a.no, 
               a.title,
               a.content,
               a.hit,
               a.reg_date regDate,
               a.user_no,
               b.name user_name
        from board  a
        inner join users  b
        on a.user_no = b.no	
	]]>
	</select>

</mapper>
